        <Rectangle x:Name="p2" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="94" Margin="362,129.667,0,0" Grid.Row="1" Stroke="White" VerticalAlignment="Top" Width="36" Grid.Column="1"/>
